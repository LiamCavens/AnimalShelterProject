<div class="title-box">
    <div class="empty-green-box"> </div>
        <h1 class="title"> Edit Trainer </h1>
    <div class="empty-green-box"> </div>
</div>

<form action="/trainer/<%= @trainer.id %>/edit" method="post">
    <label for="first_name">First Name:</label>
    <input type="text" required pattern="[a-zA-Z]*" name="first_name" id="first_name" value="<%= @trainer.first_name %>">
 
    <label for="last_name">Last Name:</label>
    <input type="text" required pattern="[a-zA-Z]*" name="last_name" id="last_name" value="<%= @trainer.last_name %>">

     <label for="fav_species">Favourite Animal:</label>
    <input type="text" required pattern="[a-zA-Z]*" name="fav_species" id="fav_species" value="<%= @trainer.fav_species %>">

    <input type="submit" value="Edit Trainer">
 
</form>