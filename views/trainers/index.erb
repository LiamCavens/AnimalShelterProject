<h1> Trainers </h1>
<p class="create-btn">
    <a class="btn" href="/trainers/new">Add New Trainer</a>
</p>
<table>
<tr>
    <th>Firts Name</th>
    <th>Last Name</th>
    <th>Favourite Species</th>
</tr>
<% for trainer in @trainers %>
<tr>
    <td><a href="/trainers/<%= trainer.id %>"><%= trainer.first_name %></a></td>  
    <td><a href="/trainers/<%= trainer.id %>"><%= trainer.last_name %></a></td>
    <td><%= trainer.fav_species %></a></td>
      
</tr>
<% end %>
 </table>