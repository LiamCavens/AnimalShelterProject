<h1> Edit Animal </h1>

 <form action="/animals<%= @animal.id %>/edit" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= @animal.name %>">
 
    <label for="species">Species:</label>
    <input type="text" name="species" id="species" value="<%= @animal.species %>">
 
    <label for="breed">Breed:</label>
    <input type="text" name="breed" id="breed" value="<%= @animal.breed %>">
 
    <label for="age">Age:</label>
    <input type="number" name="age" value="<%= @animal.age %>" id="age">
 
    <label for="adoptable">Adoptable:</label>
    <input type="checkbox" name="adoptable" id="adoptable" value="<%= @animal.adoptable %>">
 
    <label for="admission_date">Admission Date:</label>
    <input type="text" name="admission_date" id="admission_date" value="<%= @animal.admission_date %>">

    <input type="submit" value="Update Animal">
 
</form>